<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.cgmg.model.dao.CommentDao">

	<!-- 댓글 리스트 조회 -->
	<select id="selectComment" parameterType="int" resultType="Comment">
		SELECT id, parentId, writer, content, DATE_FORMAT(regDate, '%Y-%m-%d') AS regDate, isDeleted
		FROM comment
		WHERE postId = #{postId}
		ORDER BY parentId ASC
	</select>
	
	<!-- 댓글 등록 -->
	<insert id="insertComment" parameterType="Comment">
		INSERT INTO comment (postId, parentId, writer, content)
		VALUES (#{postId}, #{parentId}, #{writer}, #{content})
	</insert>
	
	<!-- 댓글 수정 -->
	<update id="updateComment" parameterType="Comment">
		UPDATE comment
		SET content = #{content}
		WHERE id = #{id}
	</update>
	
	<!-- 댓글 삭제 상태 업데이트 -->
	<update id="updateIsDeleted" parameterType="Comment">
		UPDATE comment
		SET isDeleted = #{isDeleted}
		WHERE id = #{id}
	</update>
	
	<!-- 댓글 완전 삭제 -->
	<delete id="deleteComment" parameterType="int">
		DELETE FROM comment
		WHERE id = #{id}
	</delete>
	
	<!-- 댓글 1개 조회 -->
	<select id="selectOne" parameterType="int" resultType="Comment">
		SELECT *
		FROM comment
		WHERE id = #{id}
	</select>
	
	<!-- 자식 댓글 리스트 조회 -->
	<select id="selectChildren" parameterType="int" resultType="Comment">
		SELECT *
		FROM comment
		WHERE parentId = #{id}
	</select>
	
	<!-- 댓글 모두 삭제 -->
	<delete id="deleteAllComment" parameterType="String">
		DELETE FROM comment
		WHERE writer = #{userId}
	</delete>

</mapper>